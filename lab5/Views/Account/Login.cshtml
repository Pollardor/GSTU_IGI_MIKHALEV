
@using lab2.Models.ViewModels
@model LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <link href="~/css/Styles.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/signin.css" rel="stylesheet" />
    </environment>
    <title>Login</title>
    <style>

        a.register {
            color: white;
            text-decoration: none
        }
    </style>
</head>
<body>
    <main role="main">
        <div class="container">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
            {
                <p class="btn-link float-right" style="padding-bottom:0">@Html.ActionLink("Change password", "ChangePassword", "Account")</p><br>
                <h3 class="form-signin-heading ">Please sign in</h3>
                <table>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Login)</td>
                    </tr>
                    <tr>
                        <td><label for="firstName" class="control-label">Login</label></td>
                        <td>
                            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "input-block-level", placeholder = "Login" } })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Password)</td>
                    </tr>
                    <tr>
                        <td><label for="Password" class="control-label">Password</label></td>
                        <td>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-block-level", placeholder = "Password" } })
                        </td>
                    </tr>
                    <tr>
                        <td><label for="Remember" class="control-label">Remember?</label></td>
                        <td>
                            @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "input-block-level", placeholder = "Password" } })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <label class="field-validation-error">@Html.ViewBag.LoginErrorMessage</label>
                        </td>
                    </tr>
                    <tr>
                        <td> <div class="btn btn-default">@Html.ActionLink("Go Back", "Index", "Index")</div></td>
                        <td align="right"><button class="btn btn-large btn-primary" type="submit">Sign in</button> <div class="btn btn-success">@Html.ActionLink("Register", "Register", "Account", new { @class = "register" })</div> </td>
                    </tr>
                </table>
            }
        </div>
    </main>
</body>
